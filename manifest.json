{
  "manifest_version": 3,
  "name": "MemeForge",
  "version": "1.0.0",
  "description": "Quick meme editor - paste, combine, add text, copy",
  "permissions": [
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
